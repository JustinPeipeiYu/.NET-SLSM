<Window x:Class="SLSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Smoke Less Save More" ResizeMode="NoResize" Height="400" Width="500"
        Background="LightSeaGreen">
    <Grid Loaded="MainWindow_Loaded" Margin="0,10,0,5">
        <Label x:Name="lblBrand" Content="Select Brand:" Foreground="white" HorizontalAlignment="Left" Margin="157,211,0,0" VerticalAlignment="Top" Height="26" Width="112"/>
        <Canvas Background="white" Margin="10,23,10,208"></Canvas>
        <RadioButton x:Name="rbRegular" Foreground="White" Content="Regular (20)" HorizontalAlignment="Left" Margin="246,276,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbKing" Foreground="White" Content="King Size (25)" HorizontalAlignment="Left" Margin="246,295,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSubmit" Background="White" Content="Submit" HorizontalAlignment="Left" Margin="283,314,0,0" VerticalAlignment="Top" Click="btnSubmit_Click"/>
        <Label Content="Select Size:" Foreground="white" HorizontalAlignment="Left" Margin="166,265,0,0" VerticalAlignment="Top"/>
        <ListBox HorizontalAlignment="Left" Height="44" Margin="267,219,0,0" VerticalAlignment="Top" Width="105" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <RadioButton x:Name="rbFrequency" Content="Frequency" Foreground="White" HorizontalAlignment="Left" Margin="163,-1,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbMoney" Content="Money ($)" Foreground="white" HorizontalAlignment="Left" Margin="270,0,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Center" VerticalAlignment="Center" Width="434"/>
    </Grid>
</Window>
