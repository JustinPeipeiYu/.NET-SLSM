<Window x:Class="SLSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Smoke Less Save More" ResizeMode="NoResize" Height="480" Width="500"
        Background="black">
    <Grid Loaded="MainWindow_Loaded" Margin="0,0,10,0">
        <Label x:Name="lblAdd" Content="Add" Foreground="white" HorizontalAlignment="Left" Margin="353,419,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAdd" Background="Transparent" BorderBrush="Transparent" Click="btnAdd_Click" Margin="327,308,62,45">
            <Image Source="C://Users//Public//Documents//WPF//SLSM//cigarette-case.png"/>
        </Button>
        <Label x:Name="lblPerChange" Content="lblPerChange" Foreground="white" HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblSubtract" Content="Subtract" Foreground="white" HorizontalAlignment="Left" Margin="93,416,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSubtract" Background="Transparent" BorderBrush="Transparent" Click="btnSubtract_Click" Margin="63,310,319,48">
            <Image Source="C://Users//Public//Documents//WPF//SLSM//coin-stack.png"/>
        </Button>
        <Label x:Name="lblMoneyChange" Content="lblMoneyChange" Foreground="white" HorizontalAlignment="Left" Margin="205,365,0,0" VerticalAlignment="Top"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="205,391,185,10" SelectionChanged="ListBox_SelectionChanged"/>
    </Grid>
</Window>
